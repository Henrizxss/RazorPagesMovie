@page
@model RazorPagesMovie.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
        <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0, count = Model.Movie.Count; i < count; i++) {

            var item = Model.Movie.ElementAt(i);

            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                <button type="button" onclick="Mudarestado('minhaDiv', @i), Mudarestado('minhaDiv2', @i)" >Actors</button>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        <div>
            <td id="minhaDiv2" style="display:none">
                <h3 id="minhaDiv" style="display:none">Actors:</h3>
                <ul>@Html.DisplayFor(modelItem => item.Actors)</ul>
                <ul>@Html.DisplayFor(modelItem => item.Actors2)</ul>
                <ul>@Html.DisplayFor(modelItem => item.Actors3)</ul>
                <ul>@Html.DisplayFor(modelItem => item.Actors4)</ul>
                <ul>@Html.DisplayFor(modelItem => item.Actors5)</ul>
                <ul>@Html.DisplayFor(modelItem => item.Actors6)</ul>
            </td>
        </div>
}
    </tbody>
</table>

@section Scripts
{
 <script>
  
    function Mudarestado(el, index) {

        var htmlElement = document.querySelectorAll('#' + el)[index];

        var display = htmlElement.style.display;
             
        htmlElement.style.display = display == "none" ? "block" : "none";

        }

 </script>
} 
